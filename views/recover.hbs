<!-- RECOVER -->
<form id="recover" class="pure-form pure-form-stacked" role="form">
  <fieldset>
    <h2>Glemt passord</h2>

    <label for="email">E-post</label>
    <input id="email" type="email" placeholder="E-post">

    <button type="submit" class="pure-button pure-button-primary">Send e-post</button>
  </fieldset>
</form>
<script>
document.getElementById("recover").addEventListener("submit", function (e) {
  e.preventDefault();
  ref.resetPassword({
    email: document.getElementById("email").value.trim()
  }, function(error) {
    if (error) {
      showMessage(err);
    } else {
      var recover = {
        message: "Vi har sendt en e-post til " + document.getElementById("email").value.trim() + "!"
      }
      showMessage(recover, "success");
    }
  });
});
</script>
<!-- / RECOVER -->