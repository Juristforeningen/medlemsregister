{
  "rules": {
    "users": {
      "$uid": {
        ".validate": "newData.hasChildren(['uid', 'name', 'email', 'classOf', 'isMember', 'isAdmin'])",
        "uid": {
          ".validate": "newData.isString()"
        },
        "name": {
          ".validate": "newData.isString()"
        },
        "email": {
          ".validate": "newData.isString()"
        },
        "classOf": {
          ".validate": "newData.isString()"
        },
        "isMember": {
          ".validate": "newData.isBoolean()"
        },
        "isAdmin": {
          ".validate": "newData.isBoolean()"
        },
        "$other": {
          ".validate": "false"
        },
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}
